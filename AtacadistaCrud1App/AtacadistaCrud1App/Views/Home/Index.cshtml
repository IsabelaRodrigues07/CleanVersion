@model AtacadistaCrud1App.Models.Usuario;

@if (!String.IsNullOrEmpty(ViewBag.Erro)){
    <h3 style="color:red; font-weight:600;">
        @ViewBag.Erro.ToString()
    </h3>
}

@using(Html.BeginForm("Login", "Home", FormMethod.Post, new { autocomplete="off"})){
    <label>Nome de Usuário</label>
    @Html.TextBoxFor(x=>x.apelido) <br />
    <br />
    <label> Senha </label>
    @Html.TextBoxFor(x=>x.password)
    <br />
    <label>Cargo</label>
    @Html.TextBoxFor(x=>x.cargo) <br />
    <br />

    <button type="submit">Logar</button>
}